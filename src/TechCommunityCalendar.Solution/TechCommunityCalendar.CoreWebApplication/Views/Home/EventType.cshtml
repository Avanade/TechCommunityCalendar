@model TechCommunityCalendar.CoreWebApplication.Models.EventTypeViewModel
@{
    ViewData["Title"] = $"{Model.EventType} Tech Community Events";
}

<div class="text-center">
    <h3>@Model.EventType Tech Events</h3>

    <br />
    <br />

    <h4>@Model.UpcomingEventsCount Upcoming Events</h4>
    @if (Model.Events.Any(x => x.StartDate.Date >= DateTime.Now.Date))
    {
        @await Html.PartialAsync("_EventsTable", Model.UpcomingEvents)

    }
    else
    {
        <p>No upcoming events</p>
    }
    <br />

    <h4>@Model.RecentEventsCount Recent Events</h4>

    @await Html.PartialAsync("_EventsTable", Model.RecentEvents)

</div>
