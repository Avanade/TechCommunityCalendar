@model AdminEventsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table table-bordered">
    @foreach (var techEvent in Model.TechEvents)
    {
        <tr>
            <td>@techEvent.Name</td>
            <td>@techEvent.StartDate.ToShortDateString()</td>
            <td>@if (techEvent.Hidden)
                {
                    <text>Hidden</text>
                }
                else { 
                    <text>Visible</text>
                }</td>
            <td><a href="/Admin/Edit/@techEvent.FriendlyName">Edit</a></td>
        </tr>
    }
</table>